<UserControl x:Class="Kinectomix.LevelGenerator.View.NewLevelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock>Level name</TextBlock>
            <TextBox Text="{Binding Name}"/>
            <Button IsDefault="True" Command="{Binding CreateLevelCommand}" Content="_Create level"/>
            <Button Width="100" Content="Cancel" IsCancel="True"/>
        </StackPanel>  
    </Grid>
</UserControl>
